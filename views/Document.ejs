              <button type="button" onclick="return docValidate()" class="btn button-87">Finish</button>
          
          </div>
        </div>
      </div>
      <script>
        function docValidate() {
          var fileInput3 = document.getElementById("fileInput3").value;
          var fileInput5 = document.getElementById("fileInput5").value;
          var imageView3 = document.getElementById("imageView3").innerHTML;
          var imageView5 = document.getElementById("imageView5").innerHTML;

          if (fileInput3 === "" && imageView3 === "") {
            alert("Identity Proof Document is mandatory");
            return false;
          }
          if (fileInput5 === "" && imageView5 === "") {
            alert("Qualification Document is mandatory");
            return false;
          }
          window.location.href = 'home.html';
          return true;
        }

        document.addEventListener('DOMContentLoaded', function () {
          var fileInputs = document.querySelectorAll('input[type="file"]');

          fileInputs.forEach(function (fileInput, index) {
            fileInput.addEventListener('change', function (event) {
              var file = event.target.files[0];
              if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                  var imageUrl = e.target.result;
                  var imageViewId = 'imageView' + (index + 1);
                  var statusId = 'status' + (index + 1);
                  var imageView = document.getElementById(imageViewId);
                  var status = document.getElementById(statusId);

                  imageView.innerHTML = '<img src="' + imageUrl + '" class="thumbnail" style="max-width: 100px; max-height: 100px;">';
                  status.innerHTML = 'Uploaded';
                  status.classList.remove('bg-success');
                  status.classList.add('bg-warning');
                  // Reset file input after image is added
                  event.target.value = '';
                }
                reader.readAsDataURL(file);
              }
            });
          });
        });
      </script>
